OPER setspeed 0
{
  POPVAR(newspeed);
  RobotSetDestinationSpeed( current_robot, newspeed );
  return 1;
}

OPER getspeed 0
{
  StackPushInt( program->usrstack, RobotGetSpeed( current_robot ) );
  return 1;
}

OPER setheading 0
